{
  "files": [],
  "compilerOptions": {
    /* Base config for all workspace packages */

    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2023"],
    "types": ["node"],

    /* Workspace path aliases */
    "baseUrl": ".",
    "paths": {
      "@aps/shared-types": ["packages/shared-types/src"],
      "@aps/shared-utils": ["packages/shared-utils/src"]
    }
  },

  /* For project references (optional but recommended) */
  "references": [{ "path": "./packages/shared-types" }]
}
