{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@aps/shared-types": ["../../packages/shared-types/src/index.ts"],
      "@aps/shared-utils": ["../../packages/shared-utils/src/index.ts"]
    }
  },
  "include": ["src", "test", "../../packages/shared-types/src"]
}
