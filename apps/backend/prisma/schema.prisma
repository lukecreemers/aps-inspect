datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

generator zod {
  provider       = "zod-prisma-types"
  output         = "../../../packages/shared-types/src/generated/zod" // Output directly to shared-types
  createInputTypes = false // default is true, creates schemas for create inputs
  addIncludeType = false   // default is true
  addSelectType  = false   // default is true
}

enum MapImageType {
  BASE
  WIREFRAME
  ANNOTATED
  BLUEPRINT
}

enum ReportType {
  ROOF
  EXTERIOR
}

model Client {
  id                String        @id @default(uuid())
  name              String        @unique
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  locations         Location[]
  buildings         Building[]
  maps              Map[]
  reports           Report[]
}

model Map {
  id                String        @id @default(uuid())
  clientId          String
  name              String
  width             Int
  height            Int
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  images            MapImage[]
  
  @@unique([name, clientId])
}

model MapImage {
  id                String        @id @default(uuid())
  mapId             String
  imageUrl          String
  imageType         MapImageType  @default(BASE)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  map               Map            @relation(fields: [mapId], references: [id], onDelete: Cascade)
}

model Location {
  id                String        @id @default(uuid())
  clientId          String
  isActive          Boolean       @default(true)
  name              String
  address           String?
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  buildings         Building[]

  @@unique([name, clientId])
}

model Building {
  id                String        @id @default(uuid())
  clientId          String
  locationId        String?
  isActive          Boolean       @default(true)
  name              String
  facilityNumber    String?
  accessInformation String?
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  location          Location?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  roofs             Roof[]
  gutters           Gutter[]
  substrates        Substrate[]
  windows           Window[]

  @@unique([clientId, name, locationId])
}

model Roof {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)
}

model Gutter {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)
}

model Substrate {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)
}

model Window {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)
}

model Report {
  id                String        @id @default(uuid())
  clientId          String
  title             String
  status            ReportType    @default(ROOF)
  isSystem          Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
}