datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

generator zod {
  provider       = "zod-prisma-types"
  output         = "../../../packages/shared-types/src/generated/zod" // Output directly to shared-types
  createInputTypes = false // default is true, creates schemas for create inputs
  addIncludeType = false   // default is true
  addSelectType  = false   // default is true
}

enum MapImageType {
  BASE
  WIREFRAME
  ANNOTATED
  BLUEPRINT
}

enum ReportType {
  ROOF
  EXTERIOR
}

enum ReportStatus {
  IN_PROGRESS
  FOR_REVIEW
  COMPLETED
}

enum WorkUnitStatus {
  PENDING
  IN_PROGRESS
  SUBMITTED
}

enum WorkBlockStatus {
  ASSIGNED
  IN_PROGRESS
  SUBMITTED
}

enum TimeFrame {
  IMMEDIATE
  URGENT
  NONURGENT
}

enum IssueAction {
  OPENED
  UPDATED
  RESOLVED
}


model Client {
  id                String          @id @default(uuid())
  name              String          @unique
  metadata          Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  locations         Location[]
  buildings         Building[]
  maps              Map[]
  reports           Report[]

  @@map("clients")
}

model Map {
  id                String          @id @default(uuid())
  clientId          String
  name              String
  width             Int
  height            Int
  metadata          Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  client            Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  images            MapImage[]
  
  @@unique([name, clientId])
  @@map("maps")
}

model MapImage {
  id                String          @id @default(uuid())
  mapId             String
  imageUrl          String
  imageType         MapImageType    @default(BASE)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  map               Map             @relation(fields: [mapId], references: [id], onDelete: Cascade)
  @@map("map_images")
}

model Location {
  id                String          @id @default(uuid())
  clientId          String
  isActive          Boolean         @default(true)
  name              String
  address           String?
  metadata          Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  client            Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  buildings         Building[]

  @@unique([name, clientId])
  @@map("locations")
}

model Building {
  id                String          @id @default(uuid())
  clientId          String
  locationId        String?
  isActive          Boolean         @default(true)
  name              String
  facilityNumber    String?
  accessInformation String?
  metadata          Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  client            Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  location          Location?       @relation(fields: [locationId], references: [id], onDelete: SetNull)
  roofs             Roof[]
  gutters           Gutter[]
  substrates        Substrate[]
  windows           Window[]
  reports           ReportBuilding[]
  issues            Issue[]

  @@unique([clientId, name, locationId])
  @@map("buildings")
}

model Roof {
  id                String          @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  building          Building        @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  inspections       RoofInspection[]

  @@map("roofs")
}

model RoofInspection {
  id                String          @id @default(uuid())
  roofId            String
  reportId          String
  reportWorkUnitId  String

  area              Float
  typeId            String
  condition         Int
  paintCondition    Int?
  color             String?
  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  roof              Roof            @relation(fields: [roofId], references: [id], onDelete: Cascade)
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  workUnit          ReportWorkUnit  @relation(fields: [reportWorkUnitId], references: [id], onDelete: Cascade)
  type              RoofType        @relation(fields: [typeId], references: [id])

  @@unique([roofId, reportId])
  @@map("roof_inspections")
}

model RoofType {
  id                String          @id @default(uuid())
  code              String          @unique
  description       String
  uoaCodeNumber     String?
  isActive          Boolean         @default(true)

  inspections       RoofInspection[]
  
  @@map("roof_types")
}

model Gutter {
  id                String          @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  building          Building        @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  inspections       GutterInspection[]

  @@map("gutters")
}

model GutterInspection {
  id                String          @id @default(uuid())
  gutterId          String
  reportId          String
  reportWorkUnitId  String

  length            Float
  typeId            String
  condition         Int
  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  gutter            Gutter          @relation(fields: [gutterId], references: [id], onDelete: Cascade)
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  workUnit          ReportWorkUnit  @relation(fields: [reportWorkUnitId], references: [id], onDelete: Cascade)
  type              GutterType        @relation(fields: [typeId], references: [id])

  @@unique([gutterId, reportId])
  @@map("gutter_inspections")
}

model GutterType {
  id                String          @id @default(uuid())
  code              String          @unique
  description       String
  uoaCodeNumber     String?
  isActive          Boolean         @default(true)

  inspections       GutterInspection[]
  
  @@map("gutter_types")
}

model Substrate {
  id                String          @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  building          Building        @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  inspections       SubstrateInspection[]

  @@map("substrates")
}

model SubstrateInspection {
  id                String          @id @default(uuid())
  substrateId       String
  reportId          String
  reportWorkUnitId  String

  typeId            String
  condition         Int
  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  substrate         Substrate       @relation(fields: [substrateId], references: [id], onDelete: Cascade)
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  workUnit          ReportWorkUnit  @relation(fields: [reportWorkUnitId], references: [id], onDelete: Cascade)
  type              SubstrateType   @relation(fields: [typeId], references: [id])

  @@unique([substrateId, reportId])
  @@map("substrate_inspections")
}

model SubstrateType {
  id                String          @id @default(uuid())
  code              String          @unique
  description       String
  uoaCodeNumber     String?
  isActive          Boolean         @default(true)

  inspections       SubstrateInspection[]
  
  @@map("substrate_types")
}

model Window {
  id                String          @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  building          Building        @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  inspections       WindowInspection[]
  @@map("windows")
}

model WindowInspection {
  id                String          @id @default(uuid())
  windowId          String
  reportId          String
  reportWorkUnitId  String

  typeId            String
  condition         Int
  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  window            Window          @relation(fields: [windowId], references: [id], onDelete: Cascade)
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  workUnit          ReportWorkUnit  @relation(fields: [reportWorkUnitId], references: [id], onDelete: Cascade)
  type              WindowType      @relation(fields: [typeId], references: [id])

  @@unique([windowId, reportId])
  @@map("window_inspections")
}

model WindowType {
  id                String          @id @default(uuid())
  code              String          @unique
  description       String
  uoaCodeNumber     String?
  isActive          Boolean         @default(true)

  inspections       WindowInspection[]
  
  @@map("window_types")
}

model Report {
  id                String          @id @default(uuid())
  clientId          String
  title             String
  status            ReportStatus    @default(IN_PROGRESS) 
  isSystem          Boolean         @default(false)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  client            Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  types                             ReportTypeAssignment[]
  buildings                         ReportBuilding[]
  reportWorkBlocks                  ReportWorkBlock[]
  roofInspections                   RoofInspection[]
  gutterInspections                 GutterInspection[]
  windowInspections                 WindowInspection[]
  substrateInspections              SubstrateInspection[]
  openedIssues                      Issue[]
  issueInspections                  IssueInspection[]

  @@unique([clientId, title])
  @@map("reports")
}

model ReportTypeAssignment {
  id                String          @id @default(uuid())
  reportId          String
  type              ReportType

  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, type])
  @@map("report_type_assignments")
}

model ReportBuilding {
  id                String          @id @default(uuid())
  reportId          String
  buildingId        String
  
  // Relations
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  building          Building        @relation(fields: [buildingId], references: [id])
  reportWorkUnits   ReportWorkUnit[]

  @@unique([reportId, buildingId])
  @@map("report_buildings")
}

model Contractor {
  id                String          @id @default(uuid())
  firstName         String
  lastName          String
  email             String          @unique
  phone             String?
  isActive          Boolean         @default(true)

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  reportWorkBlocks  ReportWorkBlock[]

  @@map("contractors")
}

model ReportWorkUnit {
  id                String            @id @default(uuid())
  reportBuildingId  String
  type              ReportType

  contractorId      String?
  contractorName    String?

  reportWorkBlockId String?
  status            WorkUnitStatus    @default(PENDING)

  assignedAt        DateTime?
  firstPulledAt     DateTime?
  submittedAt       DateTime?
  reviewedAt        DateTime?

  // Relations
  reportBuilding    ReportBuilding    @relation(fields: [reportBuildingId], references: [id], onDelete: Cascade)
  reportWorkBlock   ReportWorkBlock?  @relation(fields: [reportWorkBlockId], references: [id], onDelete: SetNull)
  roofInspections                     RoofInspection[]
  gutterInspections                   GutterInspection[]
  windowInspections                   WindowInspection[]
  substrateInspections                SubstrateInspection[]
  issueInspections                    IssueInspection[]


  @@unique([reportBuildingId, type])
  @@map("report_work_unit")
}

model ReportWorkBlock {
  id                String          @id @default(uuid())
  reportId          String
  contractorId      String
  loginSecretText   String

  status            WorkBlockStatus @default(ASSIGNED)

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  contractor        Contractor      @relation(fields: [contractorId], references: [id])
  reportWorkUnits   ReportWorkUnit[]

  @@map("report_work_block")
}

model Issue {
  id                String          @id @default(uuid())
  type              ReportType
  
  openingReportId   String
  buildingId        String

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  resolvedAt        DateTime?

  // Relations
  openingReport     Report          @relation(fields: [openingReportId], references: [id], onDelete: Cascade)
  building          Building        @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  subIssues         SubIssue[]
  issueInspections  IssueInspection[]

  @@map("issues")
}

model SubIssue {
  id                String          @id @default(uuid())
  issueId           String

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  resolvedAt        DateTime?

  // Relations
  issue             Issue           @relation(fields: [issueId], references: [id], onDelete: Cascade)
  subIssueInspections               SubIssueInspection[]

  @@map("sub_issues")
}

model IssueInspection {
  id                String          @id @default(uuid())
  isInitial         Boolean         @default(false)

  issueId           String
  reportId          String
  workUnitId        String

  timeframe         TimeFrame?
  action            IssueAction     @default(UPDATED)

  description       String
  toFix             String

  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  issue             Issue           @relation(fields: [issueId], references: [id], onDelete: Cascade)
  report            Report          @relation(fields: [reportId], references: [id], onDelete: Cascade)
  workUnit          ReportWorkUnit  @relation(fields: [workUnitId], references: [id], onDelete: Cascade)
  subIssueInspections               SubIssueInspection[]

  @@unique([issueId, reportId])
  @@map("issue_inspections")
}

model SubIssueInspection {
  id                String          @id @default(uuid())
  
  subIssueId        String
  issueInspectionId String

  action            IssueAction

  xCoord            Float
  yCoord            Float

  metadata          Json?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations
  subIssue          SubIssue        @relation(fields: [subIssueId], references: [id], onDelete: Cascade)
  issueInspection   IssueInspection @relation(fields: [issueInspectionId], references: [id], onDelete: Cascade)

  @@unique([subIssueId, issueInspectionId])
  @@map("sub_issue_inspections")
}