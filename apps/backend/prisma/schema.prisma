datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

generator zod {
  provider       = "zod-prisma-types"
  output         = "../../../packages/shared-types/src/generated/zod" // Output directly to shared-types
  createInputTypes = false // default is true, creates schemas for create inputs
  addIncludeType = false   // default is true
  addSelectType  = false   // default is true
}

enum MapImageType {
  BASE
  WIREFRAME
  ANNOTATED
  BLUEPRINT
}

enum ReportType {
  ROOF
  EXTERIOR
}

enum ReportStatus {
  IN_PROGRESS
  FOR_REVIEW
  COMPLETED
}

model Client {
  id                String        @id @default(uuid())
  name              String        @unique
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  locations         Location[]
  buildings         Building[]
  maps              Map[]
  reports           Report[]

  @@map("clients")
}

model Map {
  id                String        @id @default(uuid())
  clientId          String
  name              String
  width             Int
  height            Int
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  images            MapImage[]
  
  @@unique([name, clientId])
  @@map("maps")
}

model MapImage {
  id                String        @id @default(uuid())
  mapId             String
  imageUrl          String
  imageType         MapImageType  @default(BASE)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  map               Map            @relation(fields: [mapId], references: [id], onDelete: Cascade)
  @@map("map_images")
}

model Location {
  id                String        @id @default(uuid())
  clientId          String
  isActive          Boolean       @default(true)
  name              String
  address           String?
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  buildings         Building[]

  @@unique([name, clientId])
  @@map("locations")
}

model Building {
  id                String        @id @default(uuid())
  clientId          String
  locationId        String?
  isActive          Boolean       @default(true)
  name              String
  facilityNumber    String?
  accessInformation String?
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  location          Location?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  roofs             Roof[]
  gutters           Gutter[]
  substrates        Substrate[]
  windows           Window[]
  reports           ReportBuilding[]

  @@unique([clientId, name, locationId])
  @@map("buildings")
}

model Roof {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  @@map("roofs")
}

model Gutter {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  @@map("gutters")
}

model Substrate {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  @@map("substrates")
}

model Window {
  id                String        @id @default(uuid())
  buildingId        String
  removedAt         DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  building          Building      @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  @@map("windows")
}

model Report {
  id                String        @id @default(uuid())
  clientId          String
  title             String
  status            ReportStatus  @default(IN_PROGRESS) 
  isSystem          Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  client            Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  types             ReportTypeAssignment[]
  buildings         ReportBuilding[]

  @@map("reports")
}

model ReportTypeAssignment {
  id                String        @id @default(uuid())
  reportId          String
  type              ReportType

  report            Report        @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, type])
  @@map("report_type_assignments")
}

model ReportBuilding {
  id                String        @id @default(uuid())
  reportId          String
  buildingId        String
  
  // Relations
  report            Report        @relation(fields: [reportId], references: [id], onDelete: Cascade)
  building          Building      @relation(fields: [buildingId], references: [id])

  @@unique([reportId, buildingId])
  @@map("report_buildings")
}

model Contractor {
  id                String        @id @default(uuid())
  name              String
  email             String        @unique
  phone             String?
  isActive          Boolean       @default(true)

  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@map("contractors")
}